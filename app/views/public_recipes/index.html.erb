<section class="m-6 text-center">
    <h1 class="font-bold text-2xl m-2">Public Recipes</h1>
    <% @public_recipes.each do |public_recipe| %>
        <div class="flex justify-center align-center  border m-2">
            <% if public_recipe.public == "public" %>
                <div class="flex flex-column justify-center w-full">
                    <h2><%= public_recipe.name %></h2>
                    <p><%= public_recipe.user.name %></p>
                </div>
                <div class="w-full">
                    <h4>Total food items:</h4>
                    <p>Total Price: </p>
                    <p><%= link_to 'Show', public_recipe %></p>
                </div>
                
            <% end %>
        </div>
    <% end %>    
</section>